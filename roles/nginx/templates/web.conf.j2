server {
    listen 80 default_server;
    server_name _;

    root /var/www/html;
    index index.html;

    if (-f /var/www/html/.maintenance) {
        return 503;
    }

    error_page 503 /maintenance.html;

    location = /maintenance.html {
        root /var/www/html;
        internal;
    }

    location / {
        try_files $uri $uri/ =404;
    }
}
