server {
    listen 80 default_server;
    server_name _;

    root /var/www/html;
    index index.html;

    location = /health {
        return 200 "OK\n";
    }

    if (-f /var/www/html/.maintenance) {
        return 503;
    }

    error_page 503 @maintenance;

    location @maintenance {
        internal;
        root /var/www/html;
        rewrite ^ /maintenance.html break;
    }

    location / {
        try_files $uri $uri/ =404;
    }
}
